<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="mapper.BooksMapper" >
  <resultMap id="BaseResultMap" type="com.library.system.entity.BookManageEntity" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="book_no" property="bookNo" jdbcType="INTEGER" />
    <result column="book_name" property="bookName" jdbcType="VARCHAR" />
    <result column="book_author" property="bookAuthor" jdbcType="VARCHAR" />
    <result column="book_out_time" property="bookOutTime" jdbcType="DATE" />
    <result column="book_infomation" property="bookInfomation" jdbcType="VARCHAR" />
    <result column="book_shelf" property="bookShelf" jdbcType="VARCHAR" />
    <result column="book_type_id" property="bookTypeId" jdbcType="INTEGER" />
    <result column="book_count" property="bookCount" jdbcType="INTEGER" />
    <result column="book_img_url" property="bookImgUrl" jdbcType="VARCHAR" />
    <result column="book_out_sum" property="bookOutSum" jdbcType="INTEGER" />
         
  
    
    
    
  </resultMap>
  <sql id="Base_Column_List" >
    id,bookNo,bookName,bookAuthor,bookOutTime,bookInfomation,bookShelf,bookTypeId,bookCount,bookImgUrl,bookOutSum
  </sql>
  <!-- 前台用的 查询7条数据 -->
  <select id="showNotice" resultType="map">
      SELECT n.id AS id, n.title AS title,n.public_time AS publicTime  FROM notice n LEFT JOIN myuser  m ON  n.pubilc_author_id=m.id  WHERE n.is_public=1 ORDER BY n.public_time  DESC LIMIT 7
  </select>
  
  
  <select id="selectById" parameterType="INTEGER" resultType="map">
  	SELECT 
	 	 n.title title,
	 	 n.public_time publicTime,
	 	 m.username userName,
		 n.details details
	FROM
  		notice n 
  	INNER JOIN myuser m 
   		 ON m.id = n.pubilc_author_id 
	WHERE n.id =#{id}	
   
  </select>
   <!-- 后台用的查询全部 -->
   <select id="queryAllByPage" resultType="map">
       SELECT 
			b.id,
			b.book_no,
			b.book_name,
			b.book_author,
			b.book_out_time,
			b.book_infomation,
			b.book_shelf,
			t.type,
			b.book_img_url,
			b.book_count,
			b.book_out_sum
 		FROM books b LEFT JOIN book_type t ON b.book_type_id=t.id
  </select>	
 
 
 
   <!-- 带条件的分页模糊查询 -->
   <select id="queryAllSearchByPage" resultType="map" parameterType="map">
       
		SELECT 
			b.id,
			b.book_no,
			b.book_name,
			b.book_author,
			b.book_out_time,
			b.book_infomation,
			b.book_shelf,
			t.type,
			b.book_img_url,
			b.book_count,
			b.book_out_sum
 		FROM books b LEFT JOIN book_type t ON b.book_type_id=t.id
			   where  1=1
   				 <if test="bookNo!=null and bookNo!=''" >
       			 and   b.book_no like   CONCAT('%',#{bookNo},'%') 
       			</if>
       			
       			 <if test="bookName!=null and bookName!=''" >
       			 and  b.book_name like  CONCAT('%',#{bookName},'%') 
       			</if>
       			
       			<if test="bookAuthor!=null and bookAuthor!=''" >
       			 and  b.book_author like  CONCAT('%',#{bookAuthor},'%') 
       			</if>
       			
       			<if test="bookTypeId!=null and bookTypeId!=''" >
       			 and  b.book_type_id = #{bookTypeId} 
       			</if>
   </select>
  
    <update id="NoticePublic" parameterType="INTEGER">
       UPDATE notice SET is_public=1 WHERE ID=#{id}
    </update>
    
     <update id="CancelPublic" parameterType="INTEGER">
       UPDATE notice SET is_public=0 WHERE ID=#{id}
    </update>
    
    <update id="updateNoticeById"  parameterType="map">
       UPDATE notice SET title=#{title} ,details=#{details} where ID=#{id}
    </update>
    
    <select id="queryById" resultType="map" parameterType="map">
    select * from notice where id=#{id}
    </select>
   <delete id="deleteById" parameterType="INTEGER" >
       DELETE FROM notice WHERE id=#{id}
   </delete>
  
 <insert id="insertNotice"  parameterType="com.library.system.entity.NoticeEntity">
       insert into notice
       <trim prefix="(" suffix=")" suffixOverrides="," >
        
      <if test="title != null" >
        title,
      </if>
      
       <if test="details != null" >
        details,
      </if>
      
       <if test="publicTime != null" >
        public_time,
      </if>
      
      <if test="pubilcAuthorId != null" >
        pubilc_author_id,
      </if>
     
      
       <if test="isPlulic != null" >
       is_public,
       </if>
      
      
     </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
     
      <if test="title != null" >
        #{title,jdbcType=VARCHAR},
      </if>  
      
      <if test="details != null" >
        #{details},
      </if>  
      
       <if test="publicTime != null" >
        #{publicTime},
      </if>  
      
       <if test="pubilcAuthorId != null" >
        #{pubilcAuthorId},
      </if>  
      
       <if test="isPlulic != null" >
        #{isPlulic},
      </if>  
      
      
    </trim>
   </insert>
   
  
</mapper>